{
    "private": true,
    "scripts": {
        "deploy-prepare": "npm run production && docker-compose exec app make instant-deploy-prepare",
        "deploy-run": "make instant-deploy-run",
        "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "make-php-metrics-report": "docker-compose exec app vendor/bin/phpmetrics app/ --extensions=php --report-html=./docs/PhpMetricsReport",
        "make-er": "docker-compose exec app php artisan dump:mysql2puml",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "npm run dev -- --watch",
        "watch-poll": "npm run watch -- --watch-poll",
        "pre-commit": "npx lint-staged && node gitHooks/preCommit.js",
        "post-merge": "node gitHooks/postMerge.js"
    },
    "simple-git-hooks": {
        "pre-commit": "npm run pre-commit",
        "post-merge": "npm run post-merge"
    },
    "app-lint-staged": {
        "*.php": [
            "docker-compose run --rm app ./vendor/bin/php-cs-fixer fix -vvv --config ./.php-cs-fixer.php",
            "git add"
        ]
    },
    "lint-staged": {
        "*.{js,ts,vue,jsx,tsx}": [
            "eslint --fix",
            "git add"
        ],
        "*.{json,css,scss}": [
            "git add"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@babel/core": "^7.17.5",
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@hookform/resolvers": "^2.8.8",
        "@mui/icons-material": "^5.5.0",
        "@mui/lab": "^5.0.0-alpha.72",
        "@mui/material": "^5.5.0",
        "@types/base-64": "^1.0.0",
        "@types/qs": "^6.9.7",
        "@types/react": "^17.0.40",
        "@types/react-dom": "^17.0.13",
        "axios": "^0.26.1",
        "babel-loader": "^8.2.3",
        "base-64": "^1.0.0",
        "beautiful-react-hooks": "^1.2.0",
        "cross-env": "^7.0.3",
        "css-purge": "^3.1.8",
        "date-fns": "^2.28.0",
        "expect": "^27.5.1",
        "http-status-codes": "^2.2.0",
        "json-loader": "^0.5.7",
        "laravel-mix": "^6.0.43",
        "license-checker": "^25.0.1",
        "npm-run-all": "^4.1.5",
        "qs": "^6.10.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-dropzone": "^12.0.4",
        "react-hook-form": "^7.27.1",
        "react-icons": "^4.3.1",
        "react-intl": "^5.24.6",
        "react-router": "^6.2.2",
        "react-router-dom": "^6.2.2",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.49.9",
        "sass-loader": "^12.6.0",
        "sort-package-json": "^1.54.0",
        "ts-loader": "^9.2.7",
        "typescript": "^4.6.2",
        "yaml-flat-loader": "^1.0.2",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@date-io/date-fns": "^2.13.1",
        "@types/japanese-holidays": "^1.0.1",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "eslint": "^8.10.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-typescript": "^3.0.0",
        "eslint-plugin-import-access": "^1.0.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.3",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.5",
        "prettier": "^2.5.1",
        "simple-git-hooks": "^2.7.0",
